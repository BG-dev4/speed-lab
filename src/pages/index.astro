const title = "Speed Lab â€“ Pass 1";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Perf/SEO playground after first optimization pass" />
    <link rel="canonical" href="https://speed-lab-one.vercel.app/" />
    <style>
      :root{--font:-apple-system,system-ui,Segoe UI,Roboto,Helvetica,Arial,sans-serif}
      body{font-family:var(--font);margin:0}
      main{max-width:1200px;margin:0 auto;padding:24px}
      img{display:block;max-width:100%;height:auto}
      .wrap{display:grid;gap:16px}
    </style>
    <!-- no Google Fonts -->
    <!-- lazy-load heavy script to protect INP -->
    <script>
      requestIdleCallback?.(()=>{const s=document.createElement('script');s.src='/heavy.js';document.body.appendChild(s);});
    </script>
    <!-- optional: explicit preload of LCP image -->
    <link rel="preload" as="image" href="/img/hero.avif" imagesrcset="/img/hero.avif" fetchpriority="high">
  </head>
  <body>
    <main class="wrap">
      <h1>Speed Lab (Pass 1)</h1>
      <p>First pass: modern image formats + system fonts + deferred JS.</p>

      <picture>
        <source type="image/avif" srcset="/img/hero.avif" />
        <source type="image/webp" srcset="/img/hero.webp" />
        <img
          src="/img/hero-large.jpg"
          width="1600"
          height="960"
          alt="hero"
          loading="eager"
          fetchpriority="high"
          decoding="async"
          style="aspect-ratio:1600/960"
        />
      </picture>

      <section>
        <h2>Content</h2>
        <p>Layout hints prevent CLS.</p>
      </section>
    </main>
  </body>
</html>
